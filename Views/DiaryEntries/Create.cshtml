@model DiaryEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Create Diary Entry</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Enter a title" />
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <input type="text" asp-for="Content" class="form-control" placeholder="Enter what you did that day" row="5" />
                            <span class="text-danger" asp-validation-for="Content"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CreatedAt" class="form-label">Creation date</label>
                            <input type="date" asp-for="CreatedAt" class="form-control" />
                            <span class="text-danger" asp-validation-for="CreatedAt"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}